generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model user {
  id              String @id @default(uuid())
  firstName       String
  lastName        String
  email           String
  password        String
  workoutSchedule day[]

  @@unique([email])
}

model day {
  id           String       @id @default(uuid())
  dayoftheweek dayoftheweek
  user         user         @relation(fields: [userId], references: [id])
  userId       String
  workouts     workout[]

  @@unique([id])
}

model workout {
  id        String  @id @default(uuid())
  bodyPart  String
  equipment String
  gifUrl    String
  name      String
  target    String
  day       day?    @relation(fields: [dayId], references: [id])
  dayId     String?
  sets      Int?
  reps      Int?
  time      Int?
}

enum dayoftheweek {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
  Sunday
}

